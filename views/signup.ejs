<!DOCTYPE html>
<html>

<head>
  <% include ./partials/_head %>
</head>

<body>

  <div class="container logo-container">
    <% include ./partials/_header %>
  </div>

  <div id="main">
    <div class="main">
      <form action="/signup" method="post">

        <h1>
          Register
        </h1>

        <h1>
          <a href="/auth/google" class="btn btn-social btn-gplus btn-lg">
            <i class="fa fa-google"></i> Sign Up With Google
          </a>
        </h1>

        <h1>
          <a href="/auth/facebook" class="btn btn-social btn-facebook btn-lg">
            <i class="fa fa-facebook"></i> Sign Up With Facebook
          </a>
        </h1>

        <% if(hasErrors){ %>
        <div class="alert alert-danger text-center">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <% lodash.forEach(messages, function(error){
              %>
          <%= error %>
          <br>

          <%})%>
        </div>

        <% } %>

        <div class="inset">
          <p>
            <label for="username">USERNAME</label>
            <input type="text" name="username" class="" placeholder="Username" required>
          </p>

          <p>
            <label for="email">EMAIL ADDRESS</label>
            <input type="email" name="email" placeholder="Email" required />
          </p>
          <p>
            <label for="password">PASSWORD</label>
            <input type="password" name="password" placeholder="Password" required />
          </p>

        </div>

        <p class="p-container">
          <span>
            <a href="/">Login</a>
          </span>
          <input type="submit" class="login-log" value="Register">
        </p>
      </form>
    </div>
  </div>

  <% include ./partials/_footer %>
</body>

</html>